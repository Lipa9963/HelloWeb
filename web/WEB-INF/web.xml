<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <!--    <listener>
        <description>ServletContextListener</description>
        <listener-class>org.mypackage.servlet.ServletListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>org.mypackage.servlet.ErrorHandler</listener-class>
    </listener>-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>org.mypackage.servlet.Servlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>org.mypackage.servlet.ErrorHandler</servlet-class>
    </servlet>-->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
    <!--   <servlet-mapping>
      <servlet-name>Servlet</servlet-name>
      <url-pattern>/</url-pattern>
   </servlet-mapping>-->
    <welcome-file-list>
        <welcome-file>Servlet</welcome-file>
    </welcome-file-list>
    <!--    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
